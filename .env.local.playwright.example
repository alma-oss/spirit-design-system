# Playwright local configuration
# Copy this file to .env.local.playwright and adjust values as needed

# Number of parallel workers
PW_WORKERS=1

# Test timeout in milliseconds
PW_TIMEOUT=120000

# Number of retries
PW_RETRIES=2

# Action timeout in milliseconds
PW_ACTION_TIMEOUT=10000

# Navigation timeout in milliseconds
PW_NAVIGATION_TIMEOUT=30000

# Number of retries for page navigation operations (default: 3)
PW_PAGE_RETRIES=3
